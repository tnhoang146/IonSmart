        </Fluent:Ribbon.Menu>

        <Fluent:RibbonTabItem Header="CCTV">
            
        </Fluent:RibbonTabItem>
        <Fluent:RibbonTabItem Header="Network">

        </Fluent:RibbonTabItem>
        <Fluent:RibbonTabItem Header="POS">

        </Fluent:RibbonTabItem>
        <Fluent:RibbonTabItem Header="Access Control">

        </Fluent:RibbonTabItem>
